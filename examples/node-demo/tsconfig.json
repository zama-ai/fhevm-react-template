{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "lib": ["ES2022"],
    "typeRoots": ["./node_modules/@types", "./src"],
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*",
    "src/node-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
